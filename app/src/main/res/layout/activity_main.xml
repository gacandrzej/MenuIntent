<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <TextView
        android:layout_width="197dp"
        android:layout_height="49dp"
        android:layout_marginTop="200dp"
        android:text="Podaj ilość punktów:" />

    <EditText
        android:id="@+id/iloscPunktow"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_margin="200dp"
        android:layout_marginTop="200dp"
        android:hint="Podaj ilość punktów dla MonteCarlo"
        android:inputType="numberDecimal"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/button1"
        android:onClick="LosujLiczby"
        android:text="Losuj 6 liczb"
        android:layout_gravity="bottom|end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/btnnewtonraphson"
        android:text="Newton-Raphson"
        android:layout_gravity="center|start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>